<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/backg_addevent" >
	    
        <EditText
        android:id="@+id/activity_tyre_change_mileage"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/activity_tyre_change_mileage_hint"
        android:inputType="number" />
	    
	    <TextView
	        android:id="@+id/activity_tyre_change_date_text"
	        style="@style/EntryText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/activity_tyre_change_mileage"
	        android:textIsSelectable="true" />
	    
	    <Button
	        android:id="@+id/activity_tyre_change_button_date_change"
	        style="@style/button_text"
	        android:layout_toRightOf="@id/activity_tyre_change_date_text"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:background="@drawable/red_button"
	        android:onClick="showDatePickerDialog"
	        android:text="@string/activity_tyre_change_button_date_change" />
	    
	    <Button
	        android:id="@+id/activity_tyre_change_button_advanced"
	        style="@style/button_text"
	        android:layout_toRightOf="@id/activity_tyre_change_button_date_change"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:background="@drawable/red_button"
	        android:onClick="onClick"
	        android:text="@string/activity_tyre_change_button_advanced" />
	    
	    <EditText
                android:id="@+id/activity_tyre_change_tyres_cost"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_tyre_change_button_date_change"
                android:hint="@string/activity_tyre_change_tyres_cost_hint"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/activity_tyre_change_small_parts_cost"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_tyre_change_tyres_cost"
                android:hint="@string/activity_tyre_change_small_parts_cost_hint"
                android:inputType="numberDecimal" />
            
            <EditText
                android:id="@+id/activity_tyre_change_labor_cost"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_tyre_change_small_parts_cost"
                android:hint="@string/activity_tyre_change_labor_cost_hint"
                android:inputType="numberDecimal" />
            
            <EditText
                android:id="@+id/activity_tyre_change_total_cost"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_tyre_change_labor_cost"
                android:hint="@string/activity_tyre_change_total_cost_hint"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/activity_tyre_change_comment"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_tyre_change_total_cost"
                android:hint="@string/activity_tyre_change_comment_hint"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/activity_tyre_change_button_commit"
                style="@style/button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_tyre_change_comment"
                android:background="@drawable/red_button"
                android:onClick="onClick"
                android:text="@string/activity_tyre_change_button_entry_save" />
	    
	</RelativeLayout>
</ScrollView>