<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activity_refuel_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_refuel_header" />

        <EditText
            android:id="@+id/activity_refuel_mileage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_header"
            android:hint="@string/activity_refuel_mileage_hint"
            android:inputType="number" />

        <TextView
            android:id="@+id/activity_refuel_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_mileage"
            android:textIsSelectable="true" />

        <Button
            android:id="@+id/activity_refuel_button_date_change"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_mileage"
            android:layout_toRightOf="@id/activity_refuel_date_text"
            android:layout_toEndOf="@id/activity_refuel_date_text"
            android:background="@drawable/red_button"
            android:onClick="showDatePickerDialog"
            android:text="@string/activity_refuel_button_date_change" />

        <LinearLayout
            android:id="@+id/activity_refuel_cost_layout"
            android:layout_below="@id/activity_refuel_button_date_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
	        <EditText
	            android:id="@+id/activity_refuel_cost"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight=".70"
	            android:hint="@string/activity_refuel_cost_hint"
	            android:inputType="numberDecimal" />
	        
	        <Spinner
	            android:id="@+id/activity_refuel_currency"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight=".30"
	            android:entries="@array/activity_refuel_currency"
	            android:prompt="@string/activity_refuel_fuel_type_hint" />
        </LinearLayout>

        <Spinner
            android:id="@+id/activity_refuel_fuel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_cost_layout"
            android:entries="@array/activity_refuel_fuel_type"
            android:prompt="@string/activity_refuel_fuel_type_hint" />

        <EditText
            android:id="@+id/activity_refuel_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_fuel_type"
            android:hint="@string/activity_refuel_volume_hint"
            android:inputType="numberDecimal" />
        <!--
    <EditText 
        android:id="@+id/activity_refuel_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_refuel_volume"
        android:inputType="numberDecimal"
        android:hint="@string/activity_refuel_price_hint" />
        -->

        <TextView
            android:id="@+id/activity_refuel_price_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_volume"
            android:text="@string/activity_refuel_price_hint" />

        <TextView
            android:id="@+id/activity_refuel_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_price_hint"
            android:textIsSelectable="true" />

        <EditText
            android:id="@+id/activity_refuel_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_price_text"
            android:hint="@string/activity_refuel_comment_hint"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/activity_refuel_button_commit"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_comment"
            android:background="@drawable/red_button"
            android:onClick="onClick"
            android:text="@string/activity_refuel_button_entry_save" />
    </RelativeLayout>

</ScrollView>