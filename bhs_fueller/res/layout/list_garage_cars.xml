<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="3dp" >
    
    <TextView
        android:id="@+id/list_garage_cars_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_margin="3dp"
        style="@style/plain_text" />
    
    <TextView
        android:id="@+id/list_garage_cars_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_garage_cars_brand"
        android:layout_toEndOf="@id/list_garage_cars_brand"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_margin="3dp" 
        style="@style/plain_text" />
    
    <TextView
        android:id="@+id/list_garage_cars_license_plate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_garage_cars_model"
        android:layout_toEndOf="@id/list_garage_cars_model"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:gravity="end"
        android:layout_margin="3dp"
        style="@style/plain_text" />

</RelativeLayout> 