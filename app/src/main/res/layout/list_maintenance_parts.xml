<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/list_maintenance_parts_part_id"
        style="@style/plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp" />

    <TextView
        android:id="@+id/list_maintenance_parts_comment"
        style="@style/plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp" />
    
    <TextView
        android:id="@+id/list_maintenance_parts_quantity"
        style="@style/plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp" />

    <TextView
        android:id="@+id/list_maintenance_parts_price"
        style="@style/plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp" />

    <TextView
        android:id="@+id/list_maintenance_parts_currency"
        style="@style/plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp" />

</LinearLayout>