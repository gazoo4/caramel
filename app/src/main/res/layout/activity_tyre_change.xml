<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_blue" >

        <RelativeLayout
            android:id="@+id/activity_tyre_change_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="3dp">

            <Button
                android:id="@+id/activity_tyre_change_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/calendar"
                android:drawableStart="@drawable/calendar"
                android:drawablePadding="5dp"
                android:onClick="onClickShowDatePickerDialog"
                style="@style/button_text"/>

            <Button
                android:id="@+id/activity_tyre_change_button_tag_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/add_tag"
                android:drawableStart="@drawable/add_tag"
                android:onClick="onClickTagAdd"
                style="@style/button_text"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/activity_tyre_change_tags_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/activity_tyre_change_button_tag_add"
                android:layout_toStartOf="@id/activity_tyre_change_button_tag_add"
                android:gravity="center"
                android:scrollbars="horizontal" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/activity_tyre_change_mileage_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_tyre_change_date_layout"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/activity_tyre_change_mileage"
                style="@style/plain_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:hint="@string/activity_generic_mileage_hint"
                android:inputType="number" />

            <TextView
                android:id="@+id/activity_tyre_change_distance_unit"
                style="@style/plain_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3" />
        </LinearLayout>

        <Button
            android:id="@+id/activity_tyre_change_button_advanced"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_tyre_change_mileage_layout"
            android:background="@drawable/transparent_button"
            android:onClick="onClick"
            android:text="@string/activity_tyre_change_button_advanced" />

        <EditText
            android:id="@+id/activity_tyre_change_tyres_cost"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_tyre_change_button_advanced"
            android:hint="@string/activity_tyre_change_tyres_cost_hint"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/activity_tyre_change_small_parts_cost"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_tyre_change_tyres_cost"
            android:hint="@string/activity_tyre_change_small_parts_cost_hint"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/activity_tyre_change_labor_cost"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_tyre_change_small_parts_cost"
            android:hint="@string/activity_tyre_change_labor_cost_hint"
            android:inputType="numberDecimal" />

        <LinearLayout
            android:id="@+id/activity_tyre_change_total_cost_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_tyre_change_labor_cost"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/activity_tyre_change_total_cost"
                style="@style/plain_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:hint="@string/activity_generic_cost_hint"
                android:inputType="numberDecimal" />

            <Spinner
                android:id="@+id/activity_tyre_change_total_cost_currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:entries="@array/activity_expense_add_currency"
                android:prompt="@string/activity_expense_add_currency_hint" />
        </LinearLayout>

        <EditText
            android:id="@+id/activity_tyre_change_comment"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_tyre_change_total_cost_layout"
            android:hint="@string/activity_tyre_change_comment_hint"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/activity_tyre_change_button_commit"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_tyre_change_comment"
            android:background="@drawable/transparent_button"
            android:onClick="onClick"
            android:text="@string/activity_tyre_change_button_entry_save" />
    </RelativeLayout>

</ScrollView>