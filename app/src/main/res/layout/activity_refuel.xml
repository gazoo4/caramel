<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activity_refuel_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_refuel_header"
            style="@style/caption" />

        <LinearLayout
            android:id="@+id/activity_refuel_tag_layout"
            android:layout_below="@id/activity_refuel_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/activity_refuel_button_tag_add"
                style="@style/button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_button"
                android:onClick="onClick"
                android:text="@string/activity_generic_button_tag_add"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/activity_refuel_tags_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_refuel_mileage_layout"
            android:layout_below="@id/activity_refuel_tag_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
	        <EditText
	            android:id="@+id/activity_refuel_mileage"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight=".7"
	            android:hint="@string/activity_generic_mileage_hint"
	            android:inputType="number"
	            style="@style/plain_text" />
	        
	        <TextView 
	            android:id="@+id/activity_refuel_distance_unit"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight=".3"
	            style="@style/plain_text" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/activity_refuel_volume_layout"
            android:layout_below="@id/activity_refuel_mileage_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
	        
	        <EditText
	            android:id="@+id/activity_refuel_volume"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight=".7"
	            android:hint="@string/activity_refuel_volume_hint"
	            android:inputType="numberDecimal"
	            style="@style/plain_text" />
	        
	        <Spinner
	            android:id="@+id/activity_refuel_volume_unit"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight=".3"
	            android:entries="@array/activity_refuel_volume_unit"
	            android:prompt="@string/activity_refuel_volume_unit_hint" />
	    </LinearLayout>

        <TextView
            android:id="@+id/activity_refuel_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_volume_layout"
            android:textIsSelectable="true"
            style="@style/plain_text" />

        <Button
            android:id="@+id/activity_refuel_button_date_change"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_volume_layout"
            android:layout_toRightOf="@id/activity_refuel_date_text"
            android:layout_toEndOf="@id/activity_refuel_date_text"
            android:background="@drawable/red_button"
            android:onClick="showDatePickerDialog"
            android:text="@string/activity_generic_button_date_change" />

        <LinearLayout
            android:id="@+id/activity_refuel_cost_layout"
            android:layout_below="@id/activity_refuel_button_date_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
	        <EditText
	            android:id="@+id/activity_refuel_cost"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight=".70"
	            android:hint="@string/activity_generic_cost_hint"
	            android:inputType="numberDecimal"
	            style="@style/plain_text" />
	        
	        <Spinner
	            android:id="@+id/activity_refuel_currency"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight=".30"
	            android:entries="@array/activity_expense_add_currency"
	            android:prompt="@string/activity_expense_add_currency_hint" />
        </LinearLayout>

        <Spinner
            android:id="@+id/activity_refuel_fuel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_cost_layout"
            android:entries="@array/activity_refuel_fuel_type"
            android:prompt="@string/activity_refuel_fuel_type_hint" />



        <TextView
            android:id="@+id/activity_refuel_price_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_fuel_type"
            android:text="@string/activity_refuel_price_hint"
            style="@style/plain_text" />

        <TextView
            android:id="@+id/activity_refuel_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_price_hint"
            android:textIsSelectable="true"
            style="@style/plain_text" />

        <EditText
            android:id="@+id/activity_refuel_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_price_text"
            android:hint="@string/activity_generic_comment_hint"
            android:inputType="textMultiLine"
            style="@style/plain_text" />

        <Button
            android:id="@+id/activity_refuel_button_commit"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_refuel_comment"
            android:background="@drawable/red_button"
            android:onClick="onClick"
            android:text="@string/activity_generic_button_entry_save" />
    </RelativeLayout>

</ScrollView>