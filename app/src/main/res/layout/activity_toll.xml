<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_blue"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/activity_toll_header"
            style="@style/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_toll_header" />

        <LinearLayout
            android:id="@+id/activity_toll_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_toll_header"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/activity_toll_date_text"
                style="@style/plain_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true" />

            <Button
                android:id="@+id/activity_toll_button_date_change"
                style="@style/button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_button"
                android:onClick="onClickShowDatePickerDialog"
                android:text="@string/activity_generic_button_date_change" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_toll_mileage_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_toll_date_layout"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/activity_toll_mileage"
                style="@style/plain_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:hint="@string/activity_generic_mileage_hint"
                android:inputType="number" />

            <TextView
                android:id="@+id/activity_toll_distance_unit"
                style="@style/plain_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3" />
        </LinearLayout>
        
        <Spinner
                android:id="@+id/activity_toll_type"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/activity_toll_mileage_layout"
                android:entries="@array/activity_toll_type"
                android:prompt="@string/activity_toll_type_hint" />

        <LinearLayout
            android:id="@+id/activity_toll_cost_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_toll_type"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/activity_toll_cost"
                style="@style/plain_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:hint="@string/activity_generic_cost_hint"
                android:inputType="numberDecimal" />

            <Spinner
                android:id="@+id/activity_toll_currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:entries="@array/activity_expense_add_currency"
                android:prompt="@string/activity_expense_add_currency_hint" />
        </LinearLayout>

        <EditText
            android:id="@+id/activity_toll_comment"
            style="@style/plain_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_toll_cost_layout"
            android:hint="@string/activity_generic_comment_hint"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/activity_toll_button_commit"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_toll_comment"
            android:background="@drawable/grey_button"
            android:onClick="onClick"
            android:text="@string/activity_generic_button_entry_save" />

    </RelativeLayout>
</ScrollView>